<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="hoptoad.api.class">Hoptoad\HoptoadBundle\HoptoadApi</parameter>
        <parameter key="hoptoad.listener.class">Hoptoad\HoptoadBundle\Debug\ExceptionListener</parameter>
        <parameter key="hoptoad.helper.class">Hoptoad\HoptoadBundle\Templating\Helper\HoptoadHelper</parameter>
    </parameters>
    
    <services>
        <service id="hoptoad.api" class="%hoptoad.api.class%" />
        <service id="hoptoad.listener" class="%hoptoad.listener.class%">
          <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
          <argument type="service" id="hoptoad.api" />
        </service>
        <service id="hoptoad.helper" class="%hoptoad.helper.class%">
            <tag name="templating.helper" alias="hoptoad" />
        </service>
    </services>
</container>
